@model LivePerformance2.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<div class="form-container">
    <form asp-controller="User" asp-action="Register" method="post" class="form-horizontal">
        <h2 class="text-center"><strong>Register</strong></h2>
        <div class="form-group">
            <input asp-for="Username" class="form-control" placeholder="Username">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" type="password" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Password (repeat)">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group"></div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
        </div><a asp-controller="User" asp-action="Login" class="already">Or login here</a>
    </form>
</div>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }